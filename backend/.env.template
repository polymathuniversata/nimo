# Nimo Platform Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///instance/app.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/nimo_db
# For MySQL:
# DATABASE_URL=mysql://user:password@localhost:3306/nimo_db

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
BLOCKCHAIN_NETWORK=base-sepolia
# Options: base-sepolia, base-mainnet

# Base Sepolia (Testnet)
WEB3_PROVIDER_URL=https://sepolia.base.org
NIMO_IDENTITY_CONTRACT_BASE_SEPOLIA=0x56186c1e64ca8043DEF78d06Aff222212ea5df71
NIMO_TOKEN_CONTRACT_BASE_SEPOLIA=0x53Eba1e079F885482238EE8bf01C4A9f09DE458f
USDC_CONTRACT_BASE_SEPOLIA=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# Base Mainnet (Production)
# BLOCKCHAIN_NETWORK=base-mainnet
# WEB3_PROVIDER_URL=https://mainnet.base.org
# NIMO_IDENTITY_CONTRACT_BASE_MAINNET=your-mainnet-identity-contract
# NIMO_TOKEN_CONTRACT_BASE_MAINNET=your-mainnet-token-contract
# USDC_CONTRACT_BASE_MAINNET=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# =============================================================================
# METTA CONFIGURATION
# =============================================================================
METTA_MODE=mock
# Options: mock, real
USE_METTA_REASONING=false
METTA_DATABASE_PATH=backend/metta_state/metta_database.json
METTA_CORE_RULES_PATH=backend/rules/core_rules.metta
METTA_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_URL=http://localhost:5000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173
MAX_CONTENT_LENGTH=16777216
MAX_JSON_SIZE=1048576

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Rate Limiting
DEFAULT_RATE_LIMIT=100
AUTH_RATE_LIMIT=10
RATE_LIMIT_WINDOW=300

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR=logs
ENABLE_FILE_LOGGING=true
ENABLE_JSON_LOGGING=false
MAX_LOG_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis (for production caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-id-here
MONITORING_ENABLED=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENVIRONMENT=development
REACT_APP_BLOCKCHAIN_NETWORK=base-sepolia
REACT_APP_ENABLE_ANALYTICS=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_WALLET_AUTH=true
FEATURE_METTA_INTEGRATION=true
FEATURE_AUTO_REWARDS=true
FEATURE_USDC_REWARDS=true
FEATURE_IDENTITY_VERIFICATION=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Uncomment and configure for production:
# SSL_REDIRECT=true
# TRUSTED_HOSTS=your-domain.com,www.your-domain.com
# SERVER_NAME=your-domain.com
# PREFERRED_URL_SCHEME=https

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only for development
MOCK_EXTERNAL_SERVICES=true
SKIP_AUTH_FOR_TESTING=false
DEBUG_SQL_QUERIES=false