# Nimo Platform Backend Environment Configuration
# Replace placeholder values with your actual keys and settings

# =============================
# CARDANO BLOCKCHAIN SETTINGS
# =============================

# Primary network for development/testing
CARDANO_NETWORK=preview

# Blockfrost API Keys (get from https://blockfrost.io)
BLOCKFROST_PROJECT_ID_PREVIEW=previewE4gMDEDVG3RIR0dUgKI5xdyMghADUubq
BLOCKFROST_PROJECT_ID_PREPROD=your_blockfrost_preprod_project_id_here
BLOCKFROST_PROJECT_ID_MAINNET=your_blockfrost_mainnet_project_id_here

# Cardano Service Wallet (will be generated if not provided)
CARDANO_SERVICE_PRIVATE_KEY=your_cardano_private_key_here
CARDANO_SERVICE_KEY_FILE=service_key.skey

# NIMO Token Configuration
NIMO_TOKEN_POLICY_ID=
NIMO_TOKEN_ASSET_NAME=NIMO
ADA_TO_NIMO_RATE=100

# =============================
# FLASK APPLICATION SETTINGS
# =============================

# Environment mode
FLASK_ENV=development
FLASK_DEBUG=true

# Secret key for sessions (generate a secure one for production)
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Database
DATABASE_URL=sqlite:///app.db
SQLALCHEMY_DATABASE_URI=sqlite:///app.db

# =============================
# METTA REASONING ENGINE
# =============================

# Enable MeTTa reasoning
USE_METTA_REASONING=true
METTA_MODE=real

# MeTTa confidence thresholds
METTA_CONFIDENCE_THRESHOLD=0.7
METTA_MIN_CONFIDENCE_FOR_ADA=0.7

# MeTTa database and rules
METTA_DATABASE_PATH=backend/metta_state/metta_database.json
METTA_CORE_RULES_PATH=backend/rules/core_rules.metta

# =============================
# LOGGING & MONITORING
# =============================

# Logging level
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true
LOG_JSON_FORMAT=false

# Sentry error tracking (optional)
SENTRY_DSN=

# =============================
# SECURITY SETTINGS
# =============================

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour

# =============================
# LEGACY BLOCKCHAIN SUPPORT
# =============================
# (Kept for migration compatibility - will be removed)

# Legacy blockchain support (set to valid network for compatibility)
BLOCKCHAIN_NETWORK=base-sepolia
WEB3_PROVIDER_URL=https://cardano-preview.blockfrost.io/api
NIMO_IDENTITY_CONTRACT=
NIMO_TOKEN_CONTRACT=

# =============================
# EXTERNAL SERVICES (OPTIONAL)
# =============================

# Redis for caching (optional)
REDIS_URL=redis://localhost:6379

# Email service (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=

# File storage (optional)
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=
PINATA_SECRET_KEY=