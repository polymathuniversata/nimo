# Cardano Blockchain Configuration for Nimo Platform
# This file contains Cardano-specific environment variables for the Nimo Platform

# Cardano Network Configuration
CARDANO_NETWORK=preview
BLOCKFROST_PROJECT_ID_PREVIEW=your_preview_project_id_here
BLOCKFROST_PROJECT_ID_PREPROD=your_preprod_project_id_here
BLOCKFROST_PROJECT_ID_MAINNET=your_mainnet_project_id_here

# Cardano Service Wallet Configuration
# Generate a new wallet for the service or use an existing one
# To generate: python -c "from pycardano import PaymentSigningKey; k = PaymentSigningKey.generate(); print('Private Key:', k.to_primitive().hex()); print('Address:', str(k.to_verification_key().hash()))"
CARDANO_SERVICE_PRIVATE_KEY=your_cardano_private_key_hex_here
CARDANO_SERVICE_KEY_FILE=service_key.skey

# NIMO Token Configuration
NIMO_TOKEN_POLICY_ID=
NIMO_TOKEN_ASSET_NAME=NIMO
ADA_TO_NIMO_RATE=100

# Blockfrost API Configuration
BLOCKFROST_BASE_URL_PREVIEW=https://cardano-preview.blockfrost.io/api
BLOCKFROST_BASE_URL_PREPROD=https://cardano-preprod.blockfrost.io/api
BLOCKFROST_BASE_URL_MAINNET=https://cardano-mainnet.blockfrost.io/api

# Cardano Node Configuration (for local development)
CARDANO_NODE_SOCKET_PATH=
CARDANO_CLI_PATH=

# Testnet Faucet Configuration
CARDANO_FAUCET_URL=https://docs.cardano.org/cardano-testnets/tools/faucet

# Deployment Configuration
CARDANO_DEPLOYMENT_READY=false
CARDANO_CONTRACTS_DEPLOYED=false