{
  "name": "nimo-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Nimo decentralized identity platform on Base",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:gas": "forge test --gas-report",
    "deploy:local": "forge script script/Deploy.s.sol:DeployScript --rpc-url localhost --broadcast --private-key $PRIVATE_KEY",
    "deploy:base-sepolia": "forge script script/Deploy.s.sol:DeployScript --rpc-url base-sepolia --broadcast --private-key $PRIVATE_KEY --verify",
    "deploy:base-mainnet": "forge script script/Deploy.s.sol:DeployScript --rpc-url base --broadcast --private-key $PRIVATE_KEY --verify",
    "verify:base-sepolia": "forge verify-contract --chain base-sepolia",
    "verify:base-mainnet": "forge verify-contract --chain base",
    "format": "forge fmt",
    "lint": "forge fmt --check",
    "anvil": "anvil --fork-url https://mainnet.base.org",
    "oz:wizard": "npx -y @openzeppelin/contracts-mcp",
    "install-deps": "forge install",
    "update-deps": "forge update"
  },
  "devDependencies": {
    "dotenv": "^16.3.1"
  },
  "keywords": [
    "solidity",
    "foundry",
    "base",
    "smart-contracts",
    "openzeppelin",
    "identity",
    "reputation",
    "nft",
    "erc20"
  ],
  "author": "Nimo Team",
  "license": "MIT"
}