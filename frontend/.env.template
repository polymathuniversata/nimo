# Nimo Platform Frontend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:5000
VITE_API_URL=http://localhost:5000

# =============================================================================
# BLOCKCHAIN CONFIGURATION  
# =============================================================================
REACT_APP_BLOCKCHAIN_NETWORK=base-sepolia
VITE_BLOCKCHAIN_NETWORK=base-sepolia
# Options: base-sepolia, base-mainnet

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=development
REACT_APP_ENVIRONMENT=development
VITE_ENVIRONMENT=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================
REACT_APP_ENABLE_WALLET_AUTH=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=true
REACT_APP_ENABLE_MOCK_DATA=false

VITE_ENABLE_WALLET_AUTH=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Uncomment and configure for production:
# REACT_APP_API_URL=https://api.your-domain.com
# REACT_APP_BLOCKCHAIN_NETWORK=base-mainnet
# REACT_APP_ENVIRONMENT=production
# NODE_ENV=production